        DocumentRoot /srv/www/rails/<%= @appname %>/current/public
        Include /etc/apache2/sslhost.conf

        <Directory /srv/www/rails/<%= @appname %>/current/public>
                Allow from all
                Options -MultiViews
        </Directory>
</VirtualHost>
